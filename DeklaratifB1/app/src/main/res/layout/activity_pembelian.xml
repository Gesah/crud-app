<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pembelian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembelian"
        android:textColor="#FF000000"
        android:gravity="center"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Beli"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtkodebeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan kode beli"
            android:layout_margin="5dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pengguna"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtidusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Barang"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtidbarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:layout_margin="5dp"
            android:textSize="8pt"
            android:textColor="#FF000000"/>
        <EditText
            android:id="@+id/txtnamabarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QTY"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txttotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan total"
            android:layout_margin="5dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Beli"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txthargabeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan harga beli"
            android:layout_margin="5dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/TextView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Exp"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txttanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:layout_margin="5dp"
            android:inputType="date"/>

        <Button
            android:id="@+id/btnsimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>