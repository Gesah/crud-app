<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".penjualan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penjualan"
            android:textSize="12pt"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Jual"
            android:textSize="8pt"
            android:layout_margin="5dp"
            android:textColor="#FF000000"/>
        <EditText
            android:id="@+id/txtkodejual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan kode jual"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pengguna"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtidusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Barang"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtidbarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtnamabarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QTY"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txttotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Jual"
            android:textSize="8pt"
            android:textColor="#FF000000"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txthargajual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="48dp"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnjual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jual Sekarang"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnbatalkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batalkan"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>